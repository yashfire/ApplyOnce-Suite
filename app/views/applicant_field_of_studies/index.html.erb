<div class="col-xs-12 col-md-8 col-md-offset-2">
  <% if !@applicant_field_of_studies.any? %> 
    <%= render 'layouts/incomplete' %>
  <% end %>

  <div class="panel panel-primary">
    <div class="panel-heading">
      <h1 class="text-center"><%= current_applicant.username %>'s Qualifications</h1>
    </div>
    <div class="panel-body">  

      <% @applicant_field_of_studies.each do |applicant_field_of_study| %>
        <div class="well text-center col-xs-12 col-md-8 col-md-offset-2">
          <h5 class="text-primary">Field of study: </h5><%= applicant_field_of_study.Field_Of_Study %>
          <h5 class="text-primary">University: </h5><%= applicant_field_of_study.applicant_university %>
          <h5 class="text-primary">Qualification: </h5><%= applicant_field_of_study.applicant_qual %>
          <h5 class="text-primary">Qualification Status: </h5><%= applicant_field_of_study.applicant_qual_status %>
          <h5 class="text-primary">Start Date: </h5><%= applicant_field_of_study.Start_Date %>
          <h5 class="text-primary">End Date: </h5><%= applicant_field_of_study.End_date %><hr>
            
            <%= link_to 'Edit Entry', edit_applicant_field_of_study_path(applicant_field_of_study), class: "btn btn-xs btn-warning" %>
            <%= link_to 'Delete Entry', applicant_field_of_study, method: :delete, data: { confirm: 'Are you sure you want to delete this entry?' }, class: "btn btn-xs btn-danger" %>
        </div>
      <% end %>

      <br>

      <div class="col-xs-12 col-md-12">
        <%= link_to 'New Qualification', new_applicant_field_of_study_path, class: "btn btn-block btn-primary" %><br>
        <% if @applicant_field_of_studies.any? %>
          <%= link_to 'Next Step', root_url, class: "btn btn-block btn-success" %>
        <% end %>
      </div>
    </div>
    <br><%= link_to 'Back', root_url, class: 'btn btn-xs btn-danger' %>
  </div>  
</div>  
