<div class="col-xs-12 col-md-8 col-md-offset-2">
  <% if !@applicant_personal_details.any? %> 
    <%= render 'layouts/incomplete' %>
  <% end %>
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h1 class="text-center"><%= current_applicant.username %>'s Personal Details</h1>
    </div>
    <div class="panel-body">
       
      <% @applicant_personal_details.each do |applicant_personal_detail| %>
        <div class="well col-xs-12 col-md-8 col-md-offset-2 text-center">
          <h5 class="text-primary">Surname: </h5><%= applicant_personal_detail.Surname %><br>
          <h5 class="text-primary">First Name: </h5><%= applicant_personal_detail.First_Name %><br>
          <h5 class="text-primary">Middle Name: </h5>
            <% if applicant_personal_detail.Middle_Name.blank? %>
              [N/A]
            <% else %>
              <%= applicant_personal_detail.Middle_Name %> 
            <% end %>
          
          <br>
          <h5 class="text-primary">Contact Number: </h5><%= applicant_personal_detail.Contact_Number %><br>
          <h5 class="text-primary">Alternate Number: </h5><%= applicant_personal_detail.Alt_Contact_Number %><br>
          <h5 class="text-primary">Criminal Record: </h5><%= applicant_personal_detail.Criminal_Record %><br>
          <h5 class="text-primary">Current Occupation: </h5><%= applicant_personal_detail.applicant_current_occupation %><br>
          <h5 class="text-primary">Skills: </h5><%= applicant_personal_detail.Skills %><br>
          <!-- <h5 class="text-primary">Application Status: </h5><%= applicant_personal_detail.Application_Status %><br> -->
          <h5 class="text-primary">Number Of Dependancies: </h5><%= applicant_personal_detail.Number_Of_Dependancies %><br>
          <h5 class="text-primary">Race: </h5><%= applicant_personal_detail.applicant_race %><br>
          <h5 class="text-primary">Gender: </h5><%= applicant_personal_detail.applicant_gender %><br>
          <h5 class="text-primary">Marital Status: </h5><%= applicant_personal_detail.applicant_marital_status %><br>
          <h5 class="text-primary">Nationality: </h5><%= applicant_personal_detail.applicant_nationality %><hr>
              
          <%= link_to 'Edit Entry', edit_applicant_personal_detail_path(applicant_personal_detail), class: "btn btn-xs btn-warning" %>
          <%= link_to 'Delete Entry', applicant_personal_detail, method: :delete, data: { confirm: 'Are you sure you want to delete this entry?' }, class: "btn btn-xs btn-danger" %>
        </div>  
      <% end %>
      
    
      <br>
      <div class="col-xs-12 col-md-12">
        <% if !@applicant_personal_details.any? %>
          <%= link_to 'New Applicant Personal Detail', new_applicant_personal_detail_path, id: "applicant_personal_details", class: "btn btn-primary btn-block" %>
        <% else %>
          <%= link_to 'Next Step', applicant_licenses_path, class: "btn btn-success btn-block" %>
        <% end %>
      </div>

    </div>
  </div>
</div>