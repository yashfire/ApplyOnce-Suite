	  	<p><span>Duties: </span><%= applicant_experience.Duties %></p>
	  	<p><span>Start date: </span><%= applicant_experience.Start_Date %></p>
	  	<p><span>End date: </span><%= applicant_experience.End_Date %></p>
	  	<%= link_to 'Show', applicant_experience, class: "btn btn-xs btn-info" %>
        <%= link_to 'Edit', edit_applicant_experience_path(applicant_experience), class: "btn btn-xs btn-warning" %>
        <%= link_to 'Destroy', applicant_experience, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" %>
	  </div>
	</div>
  </center>	
 </div>
<% end %>
