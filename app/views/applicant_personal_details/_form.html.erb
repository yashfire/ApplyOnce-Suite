<%= simple_form_for @applicant_personal_detail do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="col-xs-4">
      <%= f.input :First_Name, autofocus: true %>
    </div>
    <div class="col-xs-4">
      <%= f.input :Middle_Name %>
    </div>
    <div class="col-xs-4">
      <%= f.input :Surname %>
    </div>
<!-- Next Row -->
    <div class="col-xs-6">
      <%= f.input :Contact_Number %>
    </div>  
    <div class="col-xs-6">
      <%= f.input :Alt_Contact_Number, label: "Alternate Contact Number" %>
    </div>
<!-- Next Row -->
    <div class="col-xs-4">  
      <label>Race</label><br>
      <%= f.collection_select(:applicant_race_id, ApplicantRace.all, :id, :Race, {:include_blank=>true}, {:class=>'form-control'}) %><br>
    </div>
    <div class="col-xs-4">  
      <label>Gender</label><br>
      <%= f.collection_select(:applicant_gender_id, ApplicantGender.all, :id, :Gender, {:include_blank=>true}, {:class=>'form-control'}) %><br>
    </div>  
    <div class="col-xs-4">
      <label>Nationality</label><br>
      <%= f.collection_select(:applicant_nationality_id, ApplicantNationality.all, :id, :Nationality, {:include_blank=>true}, {:class=>'form-control'}) %><br>
    </div>
<!-- Next Row -->
    <div class="col-xs-6">
      <label>Marital Status</label><br>
      <%= f.collection_select(:applicant_marital_status_id, ApplicantMaritalStatus.all, :id, :Marital_Status, {:include_blank=>true}, {:class=>'form-control'}) %><br>
    </div>
    <div class="col-xs-6">  
      <%= f.input :Number_Of_Dependancies %>
    </div>
<!-- Next Row -->
    <div class="col-xs-6">
      <label>Current Occupation</label><br>
      <%= f.collection_select(:applicant_current_occupation_id, ApplicantCurrentOccupation.all, :id, :Current_Occupation, {:include_blank=>true}, {:class=>'form-control'}) %><br>
    </div>
    <div class="col-xs-6">  
      <%= f.input :Skills %>
    </div>  
<!-- Next Row -->
    <div class="col-xs-6">
      <%= f.input :Criminal_Record, as: :radio_buttons, :collection => [ ['Yes', 1], ['No', 0] ], :checked => ['No', 0]  %>
    </div>
    <div class="col-xs-6">
      <%= f.input :Application_Status, label: "First Time Applicant", :as => :boolean, :input_html => { :checked => "1", :checked => true } %>
    </div>
  </div> 

  <div class="form-actions">
    <%= f.button :submit, "Submit", class: "btn btn-primary btn-block" %>
  </div>
<% end %><br>
