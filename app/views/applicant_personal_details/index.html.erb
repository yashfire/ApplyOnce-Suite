<p id="notice"><%= notice %></p>
<!-- <div class="col-xs-12"></div> -->
<div class="panel panel-primary">
  <div class="panel-heading">
    <h1 class="text-center"><%= current_applicant.username %>'s Personal Details</h1>
  </div>
  <div class="panel-body">
  <table class="table table-hover table-striped table-bordered table-condensed">
    <thead>
      <tr bgcolor="#D9EDF7">
        <th>Surname</th>
        <th>First name</th>
        <th>Middle name</th>
        <th>Contact number</th>
        <th>Alt contact number</th>
        <th>Criminal record</th>
        <th>Skills</th>
        <th>Application status</th>
        <th>Number of dependancies</th>
        <th>Race</th>
        <th>Gender</th>
        <th>Marital Status</th>
        <th>Nationality</th>
        
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @applicant_personal_details.each do |applicant_personal_detail| %>
        <tr>
          <td><%= applicant_personal_detail.Surname %></td>
          <td><%= applicant_personal_detail.First_Name %></td>
          <td><%= applicant_personal_detail.Middle_Name %></td>
          <td><%= applicant_personal_detail.Contact_Number %></td>
          <td><%= applicant_personal_detail.Alt_Contact_Number %></td>
          <td><%= applicant_personal_detail.Criminal_Record %></td>
          <td><%= applicant_personal_detail.Skills %></td>
          <td><%= applicant_personal_detail.Application_Status %></td>
          <td><%= applicant_personal_detail.Number_Of_Dependancies %></td>
          <td><%= applicant_personal_detail.applicant_race_id %></td>
          <td><%= applicant_personal_detail.applicant_gender_id %></td>
          <td><%= applicant_personal_detail.applicant_marital_status_id %></td>
          <td><%= applicant_personal_detail.applicant_nationality_id %></td>
          <td><%= link_to 'Show', applicant_personal_detail, class: "btn btn-xs btn-info" %></td>
          <td><%= link_to 'Edit', edit_applicant_personal_detail_path(applicant_personal_detail), class: "btn btn-xs btn-warning" %></td>
          <td><%= link_to 'Destroy', applicant_personal_detail, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" %></td>
          <label class="label label-info">Created: <%= applicant_personal_detail.created_at %></label><span>   </span>
          <label class="label label-info">Updated: <%= applicant_personal_detail.updated_at %></label><br><br>
        </tr>

      <% end %>
    </tbody>
  </table>

  <br>
  <% if !@applicant_personal_details.any? %>
    <%= link_to 'New Applicant Personal Detail', new_applicant_personal_detail_path, id: "applicant_personal_details", class: "btn btn-primary btn-block" %>
  <% else %>
    <%= link_to 'Next Step', applicant_addresses_path, class: "btn btn-success btn-block" %>
  <% end %>
  </div>
</div>