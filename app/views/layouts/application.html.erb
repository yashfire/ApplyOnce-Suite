<!DOCTYPE html>
<html>
  <head>
    <title>Little Pig Recruitment Agency</title>
    <link rel="shortcut icon" href="assets/img/favicon.ico" />
    <!-- Mobile views -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
      <!--Start of Tawk.to Script-->
         <script type="text/javascript">
           var Tawk_API=Tawk_API||{}, Tawk_LoadStart=new Date();
          (function(){
              var s1=document.createElement("script"),s0=document.getElementsByTagName("script")[0];
              s1.async=true;
              s1.src='https://embed.tawk.to/5cf90d65b534676f32ada587/default';
              s1.charset='UTF-8';
              s1.setAttribute('crossorigin','*');
              s0.parentNode.insertBefore(s1,s0); 
              })();
          </script>
      <!--End of Tawk.to Script-->    

  </head>


  <body>
  	<%= render 'layouts/navbar' %>
    <div class="container-fluid">	
      <% if current_page?(new_applicant_session_path) %>
        <!--  -->
      <% elsif current_page?(new_applicant_registration_path) %>
        <!--  -->
      <% else %>
        <% if notice %> 
          <div class="alert alert-info alert-dismissable text-center">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong><span class="notice"><%= notice %></span></strong> 
          </div> 
        <% elsif alert %>
          <div class="alert alert-danger alert-dismissable text-center">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong><span class="alert"><%= alert %></span></strong>
          </div>
        <% end %>
      <% end %>  

    	<%= yield %>
    </div>	
  </body>
</html>
